<div class="flex py-2">
  <button class="w-fit h-fit" type="button" onClick={{fn this.togglePin}}>
    <MdIcon class="rotate-[-45deg] text-rose-600" @icon="pin" />
  </button>
  <div class="flex flex-row pl-1">
    <input
      class="input-checkbox-primary"
      type="checkbox"
      value={{this.completed}}
      onChange={{fn this.toggleStatus}}
    />
    <div class="flex flex-col pl-2">
      <input
        class="bg-transparent leading-none text-gray-100"
        value={{this.title}}
        onChange={{fn this.changeTitle}}
      />
      <input
        class="text-sm bg-transparent leading-none text-gray-400"
        value={{this.description}}
        onChange={{fn this.changeDescription}}
      />
    </div>
    {{component this.AccessAlarm}}
  </div>
</div>
